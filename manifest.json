{
    "manifest_version": 3,
    "name": "Bookmark Content Search",
    "description": "This extension takes HTML snapshots of bookmarked pages and allows content search.",
    "version": "1.0",
    "permissions": [
        "bookmarks",
        "storage",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "48": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
